TEMPLATE_DIR="${CONFIG_DIR}/templates"
COMMAND_DIR="${CONFIG_DIR}/commands"
PLAYBOOK_TEMPLATE=$TEMPLATE_DIR/playbook.template
TASK_TEMPLATE=$TEMPLATE_DIR/task.template
INVENTORY_TEMPLATE=$TEMPLATE_DIR/inventory.template
INVENTORY_GROUP_TEMPLATE=$TEMPLATE_DIR/inventory_group.template

ROOT_DIR=$(pwd)

PLAYBOOK_PATH=$ROOT_DIR/playbook.yml
INVENTORY_PATH=$ROOT_DIR/inventory
INVENTORY_HOSTS_FILE=$INVENTORY_PATH/hosts.ini
INVENTORY_GROUPS_FILE=$INVENTORY_PATH/groups.ini
INVENTORY_CUSTOM_FILE=$INVENTORY_PATH/custom.ini
ANSIBLE_CFG_PATH=$ROOT_DIR/ansible.cfg
ROLES_DIR=$ROOT_DIR/roles
GROUP_VARS_DIR=$ROOT_DIR/group_vars
HOST_VARS_DIR=$ROOT_DIR/host_vars

SSH_USER=ansible
SSH_DIR=$ROOT_DIR/.ssh
SSH_CONFIG=$SSH_DIR/config
SSH_KEY_FILE=$SSH_DIR/ansible_ssh_key
GIT_DIR=$ROOT_DIR/.roles

DEPLOYMENT_GIT_DIR=$ROOT_DIR/.git
GITIGNORE_FILE=$ROOT_DIR/.gitignore
GITATTRIBUTES_FILE=$ROOT_DIR/.gitattributes
GITCRYPT_DIR=$ROOT_DIR/.git-crypt


DEPLOYMENT_FILES="$PLAYBOOK_PATH $INVENTORY_PATH $ROLES_DIR $GROUP_VARS_DIR $GIT_DIR $DEPLOYMENT_GIT_DIR $GITIGNORE_FILE $SSH_DIR $ANSIBLE_CFG_PATH $GITATTRIBUTES_FILE $GITCRYPT_DIR $HOST_VARS_DIR"

FUNCTION_DIR=$CONFIG_DIR/functions
. $FUNCTION_DIR/common.sh
